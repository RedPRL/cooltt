def + : nat -> nat -> nat = {
  \elim [
  | zero => \n => n
  | suc {_ => ih} => \n => suc {ih n}
  ]
}

def +-right-unit : (x : nat) -> path {\_ => nat} {+ x 0} x = {
  \elim [
  | zero =>
    \_ => 0
  | suc {y => ih} =>
    \i => suc {ih i}
  ]
}

def +-left-unit : (x : nat) -> path {\_ => nat} {+ 0 x} x = {
  \x _ => x
}

def +-suc-r : (x : nat) (y : nat) -> path {\_ => nat} {+ x {suc y}} {suc {+ x y}} = {
  \elim [
  | zero =>
    \x i => {suc x}
  | suc {x => ih} =>
    \y i => suc {ih y i}
  ]
}

