def mycoe/fun : {
  (A : (i : ð•€) -> univ) (B : (i: ð•€) -> univ)
  (coe/A : (r : ð•€) (x : A r) (i : ð•€) -> sub {A i} {i=r} x)
  (coe/B : (r : ð•€) (x : B r) (i : ð•€) -> sub {B i} {i=r} x)
  (r : ð•€) (f : (_ : A r) -> B r) (i : ð•€) ->
  sub {(_ : A i) -> B i} {i=r} f
} = {
 \A B coe/A coe/B r f i x =>
 coe/B r {f {coe/A i x r}} i
}

def mycom/fun : {
  (A : ð•€ -> univ)
  (B : ð•€ -> univ)
  (com/A : (r : ð•€) (Ï† : cof) (p : (i : ð•€) (_ : [i=r âˆ¨ Ï†]) -> A i) (i : ð•€) -> sub {A i} {i=r âˆ¨ Ï†} {p i _})
  (com/B : (r : ð•€) (Ï† : cof) (p : (i : ð•€) (_ : [i=r âˆ¨ Ï†]) -> B i) (i : ð•€) -> sub {B i} {i=r âˆ¨ Ï†} {p i _})
  (r : ð•€) (Ï† : cof) (p : (i : ð•€) (_ : [i=r âˆ¨ Ï†]) (_ : A i) -> B i) (i : ð•€) -> sub {(_ : A i) -> B i} {i=r âˆ¨ Ï†} {p i _}
} = {
  \A B com/A com/B r Ï† p r' x =>
  com/B r Ï† {\j _ => p j _ {com/A r' #f {\_ _ => x} j}} r'
}

normalize mycom/fun

def coe/intro : {
  (A : ð•€ -> univ) (r : ð•€) (r' : ð•€) (x : A r) ->
  sub {A r'} {r=r'} x
} = {
 \A r r' x => coe A r r' x
}

def coe/pi : {
  (A : ð•€ -> univ) (B : (i : ð•€) -> A i -> univ)
  (r : ð•€) (r' : ð•€)
  (f : (x : A r) -> B r x) ->
  sub {(x : A r') -> B r' x} #t {\x => coe {\i => B i {coe A r' i x}} r r' {f {coe A r' r x}}}
} = {
 \A B r r' f =>
 coe {\i => (x : A i) -> B i x} r r' f
}

normalize coe/pi

def coe/sigma : {
  (A : ð•€ -> univ) (B : (i : ð•€) -> A i -> univ)
  (r : ð•€) (r' : ð•€)
  (p : (x : A r) * B r x) ->
  sub {(x : A r') * B r' x} #t [coe A r r' {fst p}, coe {\i => B i {coe A r i {fst p}}} r r' {snd p}]
} = {
  \A B r r' p =>
  coe {\i => (x : A i) * B i x} r r' p
}

normalize coe/sigma

def hcom/intro : {
