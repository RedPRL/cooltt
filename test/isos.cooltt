def curry (A B C : type) : {{A Ã— B} â†’ C} â†’ {A â†’ B â†’ C} :=
  f a b => f [a , b]

def uncurry (A B C : type) : {A â†’ B â†’ C} â†’ {{A Ã— B} â†’ C} :=
  f ab => f {fst ab} {snd ab}

def iso/curry (A B C : type) : iso {A â†’ B â†’ C} {{A Ã— B} â†’ C} :=
  [uncurry A B C,
   [curry A B C,
    [ab_c i => ab_c,
     a_b_c i => a_b_c]]]

def iso/lhs (A B C : type) (I : iso A B) : iso {A â†’ C} {B â†’ C} :=
