def raise-hlevel : (l : nat) (A : type) â†’ has-hlevel l A â†’ has-hlevel {suc l} A :=
  let aux : (m : nat) â†’ (B : type) â†’ has-hlevel {suc m} B â†’ has-hlevel {suc {suc m}} B :=
    elim [
    | zero => prop-set
    | suc {l => ih} => B B/lvl b b' => ih {path B b b'} {B/lvl b b'}
    ]
  in
  elim [
  | zero => contr-prop
